#!/bin/bash
set -e

current_dir=$(dirname "$(realpath "$0")")
cd $current_dir
source .env

# Set up a trap to call the error_exit function on ERR signal
trap 'error_exit "### ERROR ###"' ERR

echo "### Command received ###"
file="/tmp/{{ name }}.pid"
if [[ $1 == "reload" ]]; then
    log "Reloading {{ title }}"
    {% if custom_reload %}
    {{ custom_reload | indent(4) }}
    {% else %}
    bash main.sh
    {% endif %}
elif [[ $1 == "start" ]]; then
    log "Starting {{ title }}"
    {% if custom_start %}
    {{ custom_start | indent(4) }}
    {% else %}
    bash main.sh
    {% endif %}
elif [[ $1 == "stop" ]]; then
    log "Stopping {{ title }}"
    {% if custom_stop %}
    {{ custom_stop | indent(4) }}
    {% else %}    
    /usr/bin/supervisorctl -c $WORKING_DIR/supervisord.conf stop {{ name }}
    {% endif %}
{% if additional_condition %}
{{ additional_condition }}
{% endif %}
else
  echo "Invalid argument"
fi

echo "### Done ###"